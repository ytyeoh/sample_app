<div class="contain">
  <div class="row">
    <%= form_tag listings_path, method: :get do %>
      <div class="col-md-12">
        <div class="form-group">
          <%= text_field_tag :query, params[:query], class: 'form-control city', placeholder: "Where you want to rent?",  autocomplete: "off" %>
          <%= select_tag :imove_in, "<option value=false>Normal Move In</option><option value=true>Instant Move In</option>".html_safe %>
          <p>
            <label for="amount">Price range:</label>
            <input type="text" name='begin_price' id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
          </p>
          <div id="slider-range"></div>
          <%= submit_tag 'Get your room now!', class: 'btn btn-info' %>
        </div>
      </div>
    <% end %>
    <%= image_tag 'https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcT4ZO2MVO4a2-Vjo-1nQcqbw-yHZWySPyLLsi5e34dODimek9XW', width: "100%" %>
    <h1> Rent House with us</h1>
  </div>
</div>

